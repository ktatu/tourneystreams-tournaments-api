{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./backend_build/",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ESNext"]
    },
    "include": ["src"]
}
